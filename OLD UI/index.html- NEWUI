        };

        function calculateReport(workDays) {
            const workDaysCount = workDays.filter(d => d.status === 'work').length;
            const leaveDaysCount = workDays.filter(d => d.status === 'leave').length;
            const absentDaysCount = workDays.filter(d => d.status === 'absent').length;

            const totalWorkHours = workDays.reduce((sum, d) => d.status === 'work' ? sum + d.workHours : sum, 0);
            const totalOTHours = workDays.reduce((sum, d) => d.status === 'work' ? sum + d.otHours : sum, 0);

            const workIncome = workDays.reduce((sum, d) => sum + d.workIncome, 0);
            const otIncome = workDays.reduce((sum, d) => sum + d.otIncome, 0);
            const grossIncome = workIncome + otIncome;
            const socialSecurity = grossIncome * 0.05;
            const netIncome = grossIncome - socialSecurity;

            document.getElementById('totalWorkDays').textContent = workDaysCount;
            document.getElementById('totalLeaveDays').textContent = leaveDaysCount;
            document.getElementById('totalOT').textContent = totalOTHours.toFixed(1);
            document.getElementById('totalSalary').textContent = netIncome.toLocaleString('th-TH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

            document.getElementById('workIncome').innerHTML = workIncome.toLocaleString('th-TH', { minimumFractionDigits: 2 }) + ' <span class="text-muted">‡∏ø</span>';
            document.getElementById('otIncome').innerHTML = otIncome.toLocaleString('th-TH', { minimumFractionDigits: 2 }) + ' ‡∏ø';
            document.getElementById('grossIncome').innerHTML = grossIncome.toLocaleString('th-TH', { minimumFractionDigits: 2 }) + ' ‡∏ø';
            document.getElementById('socialSecurity').innerHTML = '-' + socialSecurity.toLocaleString('th-TH', { minimumFractionDigits: 2 }) + ' ‡∏ø';
            document.getElementById('netIncome').innerHTML = netIncome.toLocaleString('th-TH', { minimumFractionDigits: 2 }) + ' ‡∏ø';

            document.getElementById('detailWorkDays').textContent = workDaysCount + ' ‡∏ß‡∏±‡∏ô';
            document.getElementById('detailLeaveDays').textContent = leaveDaysCount + ' ‡∏ß‡∏±‡∏ô';
            document.getElementById('detailAbsentDays').textContent = absentDaysCount + ' ‡∏ß‡∏±‡∏ô';
            document.getElementById('detailWorkHours').textContent = totalWorkHours.toFixed(1) + ' ‡∏ä‡∏°.';
            document.getElementById('detailOTHours').textContent = totalOTHours.toFixed(1) + ' ‡∏ä‡∏°.';
        }

        async function logActivity(action, details) {
            if (!currentUser) return;
            const log = {
                user: currentUser.email,
                action,
                details,
                timestamp: Date.now(),
                date: new Date().toLocaleString('th-TH')
            };
            try {
                await database.ref(`logs`).push(log);
            } catch (error) {
                console.error('Log error:', error);
            }
        }

        function loadLogs() {
            const logsRef = database.ref('logs').orderByChild('timestamp').limitToLast(50);
            logsRef.on('value', (snapshot) => {
                const logs = [];
                snapshot.forEach((child) => logs.push(child.val()));
                logs.reverse();
                displayLogs(logs);
            });
        }

        function displayLogs(logs) {
            const tbody = document.getElementById('logsTableBody');
            if (!logs.length) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted py-5">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô</td></tr>';
                return;
            }
            tbody.innerHTML = logs.map(log => {
                const actionBadge = getActionBadge(log.action);
                return `<tr><td>${log.date}</td><td>${log.user}</td><td>${actionBadge}</td><td>${log.details}</td></tr>`;
            }).join('');
        }

        function getActionBadge(action) {
            const badges = {
                login: '<span class="badge bg-success">‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö</span>',
                logout: '<span class="badge bg-secondary">‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö</span>',
                add_work: '<span class="badge bg-primary">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•</span>',
                delete_work: '<span class="badge bg-danger">‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•</span>',
                update_work: '<span class="badge bg-warning text-dark">‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•</span>'
            };
            return badges[action] || `<span class="badge bg-info">${action}</span>`;
        }

        // Re-init icons after tab changes
        document.querySelectorAll('button[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', () => lucide.createIcons());
        });
        document.getElementById('editModal').addEventListener('shown.bs.modal', () => lucide.createIcons());
    </script>
