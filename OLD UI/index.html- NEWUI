        document.getElementById('workDate').valueAsDate = new Date();

        // CREATE
        document.getElementById('addWorkDay').addEventListener('click', async () => {
            const workDate = document.getElementById('workDate').value;
            const shift = document.getElementById('shift').value;
            const workHours = parseFloat(document.getElementById('workHours').value);
            const otHours = parseFloat(document.getElementById('otHours').value);
            const status = document.getElementById('status').value;
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value);
            const otRate = parseFloat(document.getElementById('otRate').value);

            if (!workDate) {
                Swal.fire('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà', '', 'warning');
                return;
            }

            const workIncome = status === 'work' ? workHours * hourlyRate : 0;
            const otIncome = status === 'work' ? otHours * hourlyRate * otRate : 0;
            const totalIncome = workIncome + otIncome;

            const workDay = {
                date: workDate,
                shift,
                workHours,
                otHours,
                status,
                hourlyRate,
                otRate,
                workIncome,
                otIncome,
                totalIncome,
                timestamp: Date.now()
            };

            try {
                const userRef = database.ref(`users/${currentUser.uid}/workDays`);
                await userRef.push(workDay);
                logActivity('add_work', `‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà ${workDate}`);
                Swal.fire({ icon: 'success', title: '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', text: `‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà ${workDate}`, timer: 1500, showConfirmButton: false });
                loadWorkDays();
            } catch (error) {
                Swal.fire('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', error.message, 'error');
            }
        });

        // READ
        async function loadWorkDays() {
            if (!currentUser) return;
            const userRef = database.ref(`users/${currentUser.uid}/workDays`);
            userRef.on('value', (snapshot) => {
                const workDays = [];
                snapshot.forEach((child) => {
                    workDays.push({ id: child.key, ...child.val() });
                });
                workDays.sort((a, b) => new Date(b.date) - new Date(a.date));
                displayWorkDays(workDays);
                calculateReport(workDays);
            });
        }

        function displayWorkDays(workDays) {
            const container = document.getElementById('workDaysList');
            if (workDays.length === 0) {
                container.innerHTML = '<div class="text-center p-5 bg-white rounded-4 text-muted">üì≠ ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô</div>';
                return;
            }

            container.innerHTML = workDays.map(day => {
                const shiftText = day.shift === 'morning' ? '‡∏Å‡∏∞‡πÄ‡∏ä‡πâ‡∏≤' : '‡∏Å‡∏∞‡∏î‡∏∂‡∏Å';
                const statusBadge = getStatusBadge(day.status);
                const formattedDate = new Date(day.date).toLocaleDateString('th-TH', { year: 'numeric', month: 'short', day: 'numeric' });

                return `
                    <div class="work-day-card" data-aos="fade-up">
                        <div class="row g-3 align-items-center">
                            <div class="col-12 col-sm-6 col-md-2">
                                <div class="fw-semibold">${formattedDate}</div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-2">
                                <span class="badge bg-primary badge-custom">${shiftText}</span>
                            </div>
                            <div class="col-12 col-sm-6 col-md-2">
                                ${statusBadge}
                            </div>
                            <div class="col-12 col-sm-6 col-md-1">
                                <small class="text-secondary">${day.workHours} ‡∏ä‡∏°.</small>
                            </div>
                            <div class="col-12 col-sm-6 col-md-1">
                                <small class="text-secondary">OT ${day.otHours} ‡∏ä‡∏°.</small>
                            </div>
                            <div class="col-12 col-sm-6 col-md-2">
                                <span class="fw-bold text-success">${day.totalIncome.toFixed(2)} ‡∏ø</span>
                            </div>
                            <div class="col-12 col-md-2 text-md-end">
                                <div class="btn-group-actions">
                                    <button class="btn btn-warning" onclick="editWorkDay('${day.id}', ${JSON.stringify(day).replace(/"/g, '&quot;')})">
                                        <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                                    </button>
                                    <button class="btn btn-danger" onclick="deleteWorkDay('${day.id}')">
                                        <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            lucide.createIcons();
        }

        function getStatusBadge(status) {
            const badges = {
                work: '<span class="badge bg-success badge-custom">‡∏ó‡∏≥‡∏á‡∏≤‡∏ô</span>',
                leave: '<span class="badge bg-warning text-dark badge-custom">‡∏•‡∏≤</span>',
                absent: '<span class="badge bg-danger badge-custom">‡∏Ç‡∏≤‡∏î</span>'
            };
            return badges[status] || '';
        }

        // UPDATE
        window.editWorkDay = function(id, data) {
            document.getElementById('editWorkId').value = id;
            document.getElementById('editWorkDate').value = data.date;
            document.getElementById('editShift').value = data.shift;
            document.getElementById('editWorkHours').value = data.workHours;
            document.getElementById('editOtHours').value = data.otHours;
            document.getElementById('editStatus').value = data.status;
            document.getElementById('editHourlyRate').value = data.hourlyRate;
            document.getElementById('editOtRate').value = data.otRate;
            editModal.show();
            setTimeout(() => lucide.createIcons(), 50);
        };

        document.getElementById('saveEditBtn').addEventListener('click', async () => {
            const id = document.getElementById('editWorkId').value;
            const workDate = document.getElementById('editWorkDate').value;
            const shift = document.getElementById('editShift').value;
            const workHours = parseFloat(document.getElementById('editWorkHours').value);
            const otHours = parseFloat(document.getElementById('editOtHours').value);
            const status = document.getElementById('editStatus').value;
            const hourlyRate = parseFloat(document.getElementById('editHourlyRate').value);
            const otRate = parseFloat(document.getElementById('editOtRate').value);

            if (!workDate) {
                Swal.fire('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà', '', 'warning');
                return;
            }

            const workIncome = status === 'work' ? workHours * hourlyRate : 0;
            const otIncome = status === 'work' ? otHours * hourlyRate * otRate : 0;
            const totalIncome = workIncome + otIncome;

            const updatedWorkDay = {
                date: workDate,
                shift,
                workHours,
                otHours,
                status,
                hourlyRate,
                otRate,
                workIncome,
                otIncome,
                totalIncome,
                timestamp: Date.now()
            };

            try {
                await database.ref(`users/${currentUser.uid}/workDays/${id}`).update(updatedWorkDay);
                logActivity('update_work', `‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà ${workDate}`);
                editModal.hide();
                Swal.fire({ icon: 'success', title: '‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', timer: 1500, showConfirmButton: false });
                loadWorkDays();
            } catch (error) {
                Swal.fire('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', error.message, 'error');
            }
        });

        // DELETE
        window.deleteWorkDay = async function(id) {
            const result = await Swal.fire({
                title: '‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•?',
                text: '‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?',
