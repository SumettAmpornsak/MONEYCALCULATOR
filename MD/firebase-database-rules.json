{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "workDays": {
          ".indexOn": ["date", "timestamp"],
          "$workDayId": {
            ".validate": "newData.hasChildren(['date', 'shift', 'workHours', 'otHours', 'status', 'hourlyRate', 'otRate', 'workIncome', 'otIncome', 'totalIncome', 'timestamp'])",
            "date": {
              ".validate": "newData.isString() && newData.val().matches(/^\\d{4}-\\d{2}-\\d{2}$/)"
            },
            "shift": {
              ".validate": "newData.isString() && (newData.val() === 'morning' || newData.val() === 'night')"
            },
            "workHours": {
              ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 24"
            },
            "otHours": {
              ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 8"
            },
            "status": {
              ".validate": "newData.isString() && (newData.val() === 'work' || newData.val() === 'leave' || newData.val() === 'absent')"
            },
            "hourlyRate": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "otRate": {
              ".validate": "newData.isNumber() && newData.val() >= 1"
            },
            "workIncome": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "otIncome": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "totalIncome": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "timestamp": {
              ".validate": "newData.isNumber() && newData.val() <= now"
            },
            "$other": {
              ".validate": false
            }
          }
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "logs": {
      ".read": "auth != null",
      "$logId": {
        ".write": "auth != null && !data.exists()",
        ".validate": "newData.hasChildren(['user', 'action', 'details', 'timestamp', 'date'])",
        "user": {
          ".validate": "newData.isString() && newData.val() === auth.token.email"
        },
        "action": {
          ".validate": "newData.isString()"
        },
        "details": {
          ".validate": "newData.isString()"
        },
        "timestamp": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "date": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
